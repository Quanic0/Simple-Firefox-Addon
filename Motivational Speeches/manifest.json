// manifest.json
{
    "manifest_version": 2,
    "name": "Motivational Speeches",
    "version": "1.0",
    "description": "Displays random motivational speeches in a popup every 10 minutes.",
    "permissions": ["activeTab", "tabs"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "48": "icon.png"
    },
    "permissions": [
      "tabs"
    ]
  }
  